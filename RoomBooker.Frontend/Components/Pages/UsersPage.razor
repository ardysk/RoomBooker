@page "/users"
@using Microsoft.AspNetCore.Authorization
@using RoomBooker.Core.Dtos
@attribute [Authorize(Roles = "Admin")]
@inject RoomBooker.Frontend.Services.ApiClient Api
@inject RoomBooker.Frontend.Services.AuthState Auth
@inject IJSRuntime JS
@inject NavigationManager Nav

<h3>Zarządzanie Użytkownikami</h3>

@if (_isLoading)
{
    <div class="spinner-border text-primary" role="status"></div>
}
else if (_loadError != null)
{
    <div class="alert alert-danger">@_loadError</div>
}
else if (_users == null)
{
    <p>Brak danych.</p>
}
else
{
    @if (_isEditing && _editModel != null)
    {
        <div class="card mb-4 border-primary">
            <div class="card-header bg-primary text-white">
                Edycja użytkownika: <strong>@_editModel.DisplayName</strong>
            </div>
            <div class="card-body">
                <EditForm Model="_editModel" OnValidSubmit="SaveUserAsync">
                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Nazwa wyświetlana</label>
                            <InputText class="form-control" @bind-Value="_editModel.DisplayName" readonly />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Email</label>
                            <InputText class="form-control" @bind-Value="_editModel.Email" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Rola</label>
                            <InputSelect class="form-select" @bind-Value="_editModel.Role">
                                <option value="User">Użytkownik</option>
                                <option value="Admin">Administrator</option>
                            </InputSelect>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-danger">Nowe Hasło (zostaw puste aby nie zmieniać)</label>
                            <InputText type="password" class="form-control" @bind-Value="_editModel.NewPassword" placeholder="Wpisz tylko jeśli zmieniasz" />
                        </div>
                    </div>

                    <button type="submit" class="btn btn-success">Zapisz zmiany</button>
                    <button type="button" class="btn btn-secondary ms-2" @onclick="CancelEdit">Anuluj</button>
                </EditForm>
            </div>
        </div>
    }

    <table class="table table-hover shadow-sm rounded-3 overflow-hidden">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nazwa</th>
                <th>Email</th>
                <th>Rola</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in _users)
            {
                <tr>
                    <td>@user.UserId</td>
                    <td>@user.DisplayName</td>
                    <td>@user.Email</td>
                    <td>
                        <span class="badge @(user.Role == "Admin" ? "bg-danger" : "bg-primary")">
                            @user.Role
                        </span>
                    </td>
                    <td>
                        <button class="btn btn-sm btn-primary me-2" @onclick="() => StartEdit(user)">Edytuj</button>
                        <button class="btn btn-sm btn-danger" @onclick="() => DeleteUser(user)">Usuń</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<UserDto>? _users;
    private bool _isLoading = true;
    private string? _loadError;
    private bool _isInitialized = false;

    // Zmienne do edycji
    private bool _isEditing = false;
    private UserUpdateDto? _editModel;
    private int _editingUserId;

    // Używamy OnAfterRenderAsync zamiast OnInitializedAsync
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_isInitialized)
        {
            _isInitialized = true;

            // 1. Przywróć sesję
            await Auth.GetAuthenticationStateAsync();

            // 2. Pobierz dane
            await LoadUsers();

            StateHasChanged();
        }
    }

    private async Task LoadUsers()
    {
        _isLoading = true;
        _loadError = null;
        StateHasChanged();

        try
        {
            _users = await Api.GetUsersAsync();
        }
        catch (Exception ex)
        {
            if (ex.Message.Contains("401"))
            {
                _loadError = "Sesja wygasła. Zaloguj się ponownie.";
                Nav.NavigateTo("/login");
            }
            else
            {
                _loadError = $"Błąd pobierania danych: {ex.Message}";
            }
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
        }
    }

    private void StartEdit(UserDto user)
    {
        _editingUserId = user.UserId;
        _editModel = new UserUpdateDto
            {
                Email = user.Email,
                DisplayName = user.DisplayName,
                Role = user.Role,
                NewPassword = ""
            };
        _isEditing = true;
    }

    private void CancelEdit()
    {
        _isEditing = false;
        _editModel = null;
    }

    private async Task SaveUserAsync()
    {
        if (_editModel != null)
        {
            try
            {
                await Api.UpdateUserAsync(_editingUserId, _editModel);
                _isEditing = false;
                await LoadUsers();
            }
            catch (Exception ex)
            {
                await JS.InvokeVoidAsync("alert", $"Błąd zapisu: {ex.Message}");
            }
        }
    }

    private async Task DeleteUser(UserDto user)
    {
        bool confirmed = await JS.InvokeAsync<bool>("confirm", $"Czy na pewno chcesz usunąć użytkownika {user.DisplayName}?");
        if (confirmed)
        {
            try
            {
                await Api.DeleteUserAsync(user.UserId);
                await LoadUsers();
            }
            catch (Exception ex)
            {
                await JS.InvokeVoidAsync("alert", $"Błąd usuwania: {ex.Message}");
            }
        }
    }
}